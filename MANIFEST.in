# Only include essential files for distribution
include readme.md
include README.md
include LICENSE
include pyproject.toml
include setup.py

# Include only the main package
recursive-include auto_crud *.py

# Aggressively exclude everything else
global-exclude *.pyc
global-exclude *.pyo
global-exclude *.pyd
global-exclude __pycache__
global-exclude .git*
global-exclude .DS_Store
global-exclude *.egg-info
global-exclude .pytest_cache
global-exclude .ruff_cache
global-exclude .venv
global-exclude venv
global-exclude dist
global-exclude build
global-exclude *.db
global-exclude *.sqlite
global-exclude *.log 

# Prune large or unnecessary directories to speed up build
prune .git
prune .ruff_cache
prune .pytest_cache
prune .mypy_cache
prune .venv
prune venv
prune dist
prune build
prune sample
prune tests
prune .github
prune docs 